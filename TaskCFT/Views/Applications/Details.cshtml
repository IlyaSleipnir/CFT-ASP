@model TaskCFT.Models.ViewModels.ApplicationVM.ApplicationDetailVM

@{
    ViewData["Title"] = "Детали";
}

<h1>Детали</h1>

<div>
    <h4>Application</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkRequests)
        </dt>
        <dd class="col-sm-10">
            @if (Model.WorkRequests.Count > 0)
            {
                <table class="table" border="1">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.WorkRequests.First().Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.WorkRequests.First().EndDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.WorkRequests.First().Email)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.WorkRequests)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Нет связанных заявок</p>
            }
        </dd>
    </dl>
    <div class="">
        <a asp-action="Index" class="btn btn-outline-dark">Назад</a>
    </div>
</div>
